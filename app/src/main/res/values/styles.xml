<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_pccent</item>
    </style>

    <style name="SongTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_height</item>
        <item name="tabPaddingStart">@dimen/tab_padding_start</item>
        <item name="tabPaddingEnd">@dimen/tab_padding_end</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
    </style>
</resources>
